@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="container text-center">
    <h1 class="display-4">Chào Mừng Bạn Đến Với Dmusic</h1>
    <p>Khám phá và quản lý âm nhạc của bạn dễ dàng với nền tảng Dmusic.</p>
    <a href="#featured-products" class="btn btn-primary btn-lg">Khám Phá Sản Phẩm</a>
</div>

<!-- Phần Giới Thiệu Sản Phẩm hoặc Blog -->
<div class="container" id="featured-products">
    <h2 class="mt-5 text-center">Sản Phẩm Nổi Bật</h2>
    <div class="row">
        <!-- Sản phẩm 1 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Album Âm Nhạc Mới</h5>
                    <p class="card-text">Khám phá bộ sưu tập album âm nhạc mới nhất được cập nhật liên tục.</p>
                    <a href="#" class="btn btn-warning">Xem Chi Tiết</a>
                </div>
            </div>
        </div>

        <!-- Sản phẩm 2 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Dịch Vụ Quản Lý Âm Nhạc</h5>
                    <p class="card-text">Quản lý danh sách âm nhạc và phát hành sản phẩm của bạn dễ dàng với Dmusic.</p>
                    <a href="#" class="btn btn-warning">Xem Chi Tiết</a>
                </div>
            </div>
        </div>

        <!-- Sản phẩm 3 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Ứng Dụng Âm Nhạc Dmusic</h5>
                    <p class="card-text">Tải ứng dụng Dmusic và bắt đầu nghe nhạc mọi lúc mọi nơi.</p>
                    <a href="#" class="btn btn-warning">Xem Chi Tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Phần Blog -->
<div class="container mt-5">
    <h2 class="text-center">Bài Viết Mới</h2>
    <div class="row">
        <!-- Bài viết 1 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Cách Tạo Một Album Âm Nhạc Thành Công</h5>
                    <p class="card-text">Tìm hiểu cách bạn có thể tạo ra một album âm nhạc thành công và thu hút người nghe.</p>
                    <a href="#" class="btn btn-info">Đọc Tiếp</a>
                </div>
            </div>
        </div>

        <!-- Bài viết 2 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Những Điều Cần Biết Khi Quản Lý Nghệ Sĩ</h5>
                    <p class="card-text">Hướng dẫn cách quản lý nghệ sĩ và tối ưu hóa quy trình phát hành âm nhạc.</p>
                    <a href="#" class="btn btn-info">Đọc Tiếp</a>
                </div>
            </div>
        </div>

        <!-- Bài viết 3 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Những Xu Hướng Âm Nhạc Nổi Bật Năm 2025</h5>
                    <p class="card-text">Khám phá những xu hướng âm nhạc mới nhất và cách chúng ảnh hưởng đến ngành công nghiệp âm nhạc.</p>
                    <a href="#" class="btn btn-info">Đọc Tiếp</a>
                </div>
            </div>
        </div>
    </div>
</div>
