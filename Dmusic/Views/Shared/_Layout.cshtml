<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dmusic</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dmusic.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/music_dashboard.css" asp-append-version="true" /> <!-- Thêm tệp CSS cho quản lý âm nhạc -->
</head>
<body>
    <header class="header">
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dmusic</a>
                <div class="navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Chính Sách Bảo Mật</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Albums" asp-action="Index">Quản Lý Âm Nhạc</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container dashboard">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - Dmusic - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính Sách Bảo Mật</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
